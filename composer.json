{
    "name": "your-vendor/php-rest-api-framework",
    "description": "A modern, lightweight, framework-agnostic RESTful API framework for PHP 8.2+",
    "type": "library",
    "keywords": ["rest", "api", "framework", "http", "psr"],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0",
        "psr/http-factory": "^1.0",
        "guzzlehttp/psr7": "^2.6",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "php-cs-fixer/shim": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RestApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RestApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "check": [
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
